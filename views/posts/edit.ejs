<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/edit.css">

        <div class="edit-modal">
            <form action="/posts/<%=post._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                <textarea rows="10" cols="30" type="text" name="post[content]" id="content" required><%=post.content%></textarea>
                <div class="image-upload">
                    <span>Add photo(s)?</span>
                    <label for="image">
                        <svg version="1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
                            <path fill="#8CBCD6" d="M40,41H8c-2.2,0-4-1.8-4-4V11c0-2.2,1.8-4,4-4h32c2.2,0,4,1.8,4,4v26C44,39.2,42.2,41,40,41z"/>
                            <circle fill="#B3DDF5" cx="35" cy="16" r="3"/>
                            <polygon fill="#9AC9E3" points="20,16 9,32 31,32"/>
                            <polygon fill="#B3DDF5" points="31,22 23,32 39,32"/>
                            <circle fill="#43A047" cx="38" cy="38" r="10"/>
                            <g fill="#fff">
                                <rect x="36" y="32" width="4" height="12"/>
                                <rect x="32" y="36" width="12" height="4"/>
                            </g>
                        </svg>
                    </label> 
                    <input name="image" type="file" id="image" multiple>
                </div>
                <% if(post.images.length !== 0) { %> 
                <h4>Select image(s) to delete</h4>
                <div class="images">
                    <% post.images.forEach(function(image, i) { %> 
                        <div class="image-delete">
                            <img src="<%=image.thumbnail%>" alt="" class="img-thumbnail">
                            <div class="form-check-inline">
                                <input type="checkbox" name="deleteImages[]" id="Image-<%=i%>" value="<%=image.filename%>">
                            </div>
                        </div>
                    <% }) %>
                </div>
                <% } %> 
            <button class="update">Update post</button>
            </form>
            <button class="cancel"><a href="/posts/<%=post._id%>">Cancel</a></button>
        <div>

