<!-- if success array exists and not empty-->
<% if(success && success.length) { %> 
    <div class="alert alert-dismissible fade show alert-success" role="alert">
        <%= success %> 
        <button type="button" style="margin-top: -0.5rem;" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
   </div>
<% } %> 



<!-- if error array exists and not empty-->
<% if(error && error.length) { %> 
    <div class="alert alert-dismissible fade show alert-danger" role="alert">
        <%= error %> 
        <button type="button" style="margin-top: -0.5rem; margin-left: -0.1rem;" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
   </div>
<% } %>