<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/edit.css"> 

    
    <div class="edit-modal">
        <form action="/posts/<%=post._id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <textarea rows="10" cols="30" type="text" name="comment[body]" id="body" required><%=comment.body%></textarea>
            <!-- <input type="text" name="comment[body]" id="body" value="<%=comment.body%>" required> -->
            <button class="update">Update comment</button>
        </form>
        <button class="cancel"><a href="/posts/<%=post._id%>">Cancel</a></button>
    </div>